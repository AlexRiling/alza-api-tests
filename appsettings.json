{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "Logs/test-execution-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  },
  "ApiSettings": {
    "BaseUrl": "https://webapi.alza.cz/api/career/v2/positions/",
    "Timeout": 30000,
    "Retries": 3
  }
}
